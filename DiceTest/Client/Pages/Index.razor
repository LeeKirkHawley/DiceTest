@page "/"

<div id="diceDiv">
    <img src=@Gifs[0] id="Die1" class="Die" />
    <img src=@Gifs[1] id="Die2" class="Die" />
    <img src=@Gifs[2] id="Die3" class="Die" />
    <img src=@Gifs[3] id="Die4" class="Die" />
    <img src=@Gifs[4] id="Die5" class="Die" />
    <img src=@Gifs[5] id="Die6" class="Die" />
</div>

<div id="buttonDiv">
    <button @onclick="OnRollDice">Roll Dice</button>
    <button @onclick="OnNewGame">New Game</button>
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Title { get; set; }

    //[Parameter]
    public string[] Gifs = new string[6];

    protected override void OnInitialized() {
        RollDice();
    }


    private void OnRollDice() {
        RollDice();
    }

    private void OnNewGame() {

    }

    private void RollDice() {
        Random rnd = new Random();
        for(int i = 0; i < 6;i++) {
            Gifs[i] = $"assets/{rnd.Next() % 6 + 1}.gif";
        }
    }
}

